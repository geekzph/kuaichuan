<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:orientation="vertical" android:id="@id/thumb" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/video_background" android:layout_width="fill_parent" android:layout_height="80.0dip" android:src="@drawable/photo_bg" android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:padding="5.0dip"
            android:scaleType="fitXY" />

        <RelativeLayout android:layout_gravity="bottom" android:id="@+id/video_indicator" android:background="#66000000" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_margin="5.0dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="5.0dip"
                android:src="@drawable/video_cam" />

            <TextView android:textSize="10.0sp" android:textColor="@color/white" android:gravity="right" android:id="@+id/video_duration" android:paddingLeft="16.8dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:singleLine="true" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
        </RelativeLayout>
    </FrameLayout>
    <ImageView android:id="@+id/video_click_item" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="80.0dip" android:src="@drawable/selected_photo" android:scaleType="fitXY" android:layout_centerInParent="true" />
</RelativeLayout>
